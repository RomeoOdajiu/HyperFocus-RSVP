{
  "manifest_version": 3,
  "name": "HyperFocus - RSVP",
  "short_name": "HyperFocus",
  "version": "1.1.0",
  "description": "Absorb knowledge at the speed of thought. Advanced RSVP reader with focus themes.",
  "permissions": [
    "activeTab", 
    "clipboardRead", 
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Toggle HyperFocus Widget"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["readability.js", "content.js"],
      "css": ["styles.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["carrot_icon.png"],
      "matches": ["<all_urls>"]
    }
  ]
}
